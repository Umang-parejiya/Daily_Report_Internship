Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /Daily_Report_Internship/Easy-cart-Ecommers-site/

# 1. External Redirect: Remove .php extension
# If access is /file.php, redirect to /file
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. External Redirect: Remove index.php
# If access is /index.php, redirect to /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)/index\.php [NC]
RewriteRule ^ %1/ [R=301,L]

# 3. Internal Rewrite: Map clean URL to .php file
# If /login is requested, check if login.php exists and serve it
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# 4. MVC Routing: Send everything else to index.php
# If not a file or directory, let index.php handle it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]
